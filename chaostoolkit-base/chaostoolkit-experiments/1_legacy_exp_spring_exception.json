{
  "version": "1.0.0",
  "title": "1. Legacy - exploring assumptions if a dependency throws exceptions",
  "description": "Uses the Spring Chaos Monkey to manipulate a service",
  "tags": [
    "service",
    "spring"
  ],
  "steady-state-hypothesis": {
    "probes": [
      {
        "name": "api-gateway-must-still-respond",
        "provider": {
          "type": "http",
          "url": "http://gateway:8080/startpage",
          "timeout": [0.25, 0.25]
        },
        "tolerance": 200,
        "type": "probe"
      }
    ],
    "title": "System is healthy"
  },
  "method": [
    {
      "name": "enable_chaosmonkey",
      "provider": {
        "arguments": {
          "base_url": "http://host.docker.internal:8090/actuator"
        },
        "func": "enable_chaosmonkey",
        "module": "chaosspring.actions",
        "type": "python"
      },
      "type": "action"
    },
    {
      "name": "configure_assaults",
      "provider": {
        "arguments": {
          "base_url": "http://host.docker.internal:8090/actuator",
          "assaults_configuration": {
            "level": 1,
            "latencyRangeStart": 5000,
            "latencyRangeEnd": 10000,
            "latencyActive": false,
            "exceptionsActive": true,
            "killApplicationActive": false
          }
        },
        "func": "change_assaults_configuration",
        "module": "chaosspring.actions",
        "type": "python"
      },
      "type": "action"
    }
  ],
  "rollbacks": [
    {
      "name": "disable-chaosmonkey",
      "type": "action",
      "provider": {
        "type": "python",
        "module": "chaosspring.actions",
        "func": "disable_chaosmonkey",
        "arguments": {
          "base_url": "http://host.docker.internal:8090/actuator"
        }
      }
    }
  ]
}
